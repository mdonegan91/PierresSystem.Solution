@{
  Layout = "_Layout";
}

@using PierresSystem.Models;

<h1>Vendors</h1><br>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 


@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3><br>
}

<p><a href='/vendors/new'>Add Vendor</a></p>
<p><a href='/'>Home</a></p>